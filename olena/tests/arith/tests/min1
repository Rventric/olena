#include <oln/basics2d.hh>
#include <oln/arith/ops.hh>
#include <ntg/all.hh>
#include <cassert>

using namespace oln;
using namespace ntg;

int main()
{
  image2d<bin> im1 (10, 10);
  image2d<bin>::iter_type it1(im1);

  for_all (it1)
    im1[it1] = 0;

  image2d<bin> im2 (10, 10);
  image2d<bin>::iter_type it2(im2);

  for_all (it2)
    im2[it2] = 1;
  
  image2d<bin> imin = arith::min (im1, im2);
  image2d<bin>::iter_type itmin(imin);

  for_all (itmin)
    assert (imin[itmin] == bin(0));
  
  image2d<bin> imax = arith::max (im1, im2);
  image2d<bin>::iter_type itmax(imax);

  for_all (itmax)
    assert (imax[itmax] == bin(1));
 
  return 0;
}
