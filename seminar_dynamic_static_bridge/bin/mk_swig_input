#!/usr/bin/env ruby
includes = []

if ARGV.empty?
  STDERR.puts "usage #$0 <path/to/some/c++/headers.hh>*"
  exit
end
flags = '' # '-DVCSN_USE_INTERFACE_ONLY'
ARGV.each do |root|
  `g++ -I vcsn/include #{flags} -E #{root} | grep '^#.*vaucanson'`.to_a.reverse_each do |line|
    line.chomp!
    line.gsub!(/^.*include\/(vaucanson\/.*)".*$/, '\1')
    next unless line =~ /\.hh$/

    next if line =~ /\/(static|letter)\.hh/ # XXX hard skipping

    includes << line unless includes.include? line
  end
end
File.open('vcsn.i', 'w') do |vcsn_i|
  includes.reverse_each do |include|
    vcsn_i.puts "%include \"#{include}\""
  end
  vcsn_i.puts "%module vcsn"
end
