							// -*- C++ -*-
#include <iostream>

#include <ntg/all.hh>
#include <oln/basics3d.hh>

#include "check.hh"
#include "data.hh"




bool check()
{
  oln::image3d<int> ima(10, 10, 10);
  int cpt = 0;

  oln::fwd_piter3d fwd_it(ima.size());
  for_all_p (fwd_it)
  {
    ima[fwd_it] = 0;
    cpt++;
  }

  if (cpt != 1000)
    return true;


  cpt = 0;  
  oln::bkd_piter3d bkd_it(ima.size());
  for_all_p (bkd_it)
  {
    ima[bkd_it] = 0;
    cpt++;
  }

  if (cpt != 1000)
    return true;


  return false;
}
