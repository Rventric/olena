							// -*- C++ -*-
#include <iostream>

#include <ntg/all.hh>
#include <oln/basics2d.hh>

#include "check.hh"
#include "data.hh"




bool check()
{
  oln::image2d<int> ima(10, 10);
  int cpt = 0;

  oln::fwd_piter2d fwd_it(ima.size());
  for_all_p (fwd_it)
  {
    ima[fwd_it] = 0;
    cpt++;
  }

  if (cpt != 100)
    return true;


  cpt = 0;
  oln::bkd_piter2d bkd_it(ima.size());
  for_all_p (bkd_it)
  {
    ima[bkd_it] = 0;
    cpt++;
  }

  if (cpt != 100)
    return true;


  return false;
}
